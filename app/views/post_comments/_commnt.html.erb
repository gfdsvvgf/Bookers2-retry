<table>
<% comments.each do |post_comment| %>
  <tr>
      <td>
      <%= link_to user_path(post_comment.user.id), class: "commentUserLink" do %>
          <%= attachment_image_tag(post_comment.user, :profile_image, :fill, 800, 500, fallback: "no-image-icon.jpg") %>
          <%= post_comment.user.name %>
      <% end %>
      </td>
      <% if post_comment.user_id == current_user.id %>
          <td class="commentContent"><%= post_comment.comment %>
              <%= link_to 'Destroy', book_post_comment_path(post_comment.book_id, post_comment.id), method: :delete, remote: true, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%>
          </td>
      <% end %>
  </tr>
<% end %>
</table>